div(class="row")
    div(class="col")
        h1 Productos
hr(class="col-3 col-md-2 mb-5")
div(class="row justify-content-center")
    div(class="col")
        if hayProductos
            table(class="table table-striped table-hover ")
                thead   
                    tr 
                        th(scope="col") #
                        th(scope="col") Title
                        th(scope="col") Price
                        th(scope="col") Thumbnail
                tbody 
                    each producto in productos 
                        tr
                            th(scope="row")=producto.id
                            th(scope="row")=producto.title
                            th(scope="row")=producto.price
                            th(scope="row")
                                img(width="15%" src=producto.thumbnail)
        else
            h3 No hay productos almacenados